<div class="dropdown dropup dropdown--actions">
  <button class="btn" data-toggle="dropdown"><%- @T('Action') %> <span class="caret"></span></button>
  <ul class="dropdown-menu">
    <% for item in @items: %>
    <li><a href="#" data-type="<%= item.name %>"><%- @T( item.title ) %></a></li>
    <% end %>
  </ul>
</div>